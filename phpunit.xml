<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
>
    <testsuites>
        <testsuite name="Skyeng Test Suite">
            <directory suffix=".php">./task3/myVersion/tests/</directory>
            <directory suffix=".php">./task4/tests/</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory suffix=".php">./task3/myVersion/src/</directory>
            <directory suffix=".php">./task4/src/</directory>
        </whitelist>
    </filter>
</phpunit>